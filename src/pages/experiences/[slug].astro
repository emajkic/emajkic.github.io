---
import { siteConfig } from "../../config";

export async function getStaticPaths() {
  return siteConfig.experience.map((exp) => ({
    params: { slug: exp.slug },
  }));
}

const { slug } = Astro.params;

// map slugs to actual pages
const pageMap: Record<string, string> = {
  "triumf-experience": "/experiences/triumf",
  "opbots-experience": "/experiences/opbots",
};

const target = pageMap[slug];

if (!target) {
  throw new Error(`Unknown experience slug: ${slug}`);
}

Astro.redirect(target);
