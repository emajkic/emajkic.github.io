---
import Layout from '../../layouts/Layout.astro';
import { siteConfig } from '../../config';
import "../../styles/global.css";

export async function getStaticPaths() {
  // Make sure this matches the array in config.ts
  return siteConfig.experience.map((exp) => ({
    params: { slug: exp.slug },
    props: { experience: exp },
  }));
}

const { experience } = Astro.props;
---
<Layout>
  <section class="p-8 sm:p-12 md:p-16 lg:p-24 max-w-4xl mx-auto">
    <a href="/#experience" class="text-sm text-gray-500 hover:underline">
      ‚Üê Back to Home
    </a>

    <h1 class="mt-4 text-4xl sm:text-5xl font-bold text-gray-900">
      {experience.company}
    </h1>

    <p class="mt-2 text-lg text-gray-600">
      {experience.position} | {experience.dateRange}
    </p>

    <div class="mt-6 text-gray-700 leading-relaxed space-y-4">
        <p>{experience.para1}</p>
    </div>

    <div class="mt-6 text-gray-700 leading-relaxed space-y-4">
        <p>{experience.para2}</p>
    </div>

{(experience.img1_1 || experience.img1_2 || experience.img1_3) && (
  <div className="mt-8">
    {/* Force images in a single horizontal row */}
    <div className="flex justify-center items-start gap-4 flex-wrap">
      {experience.img1_1 && (
        <div className="flex flex-col items-center w-[250px]">
          <img 
            src={experience.img1_1} 
            alt="Co-op Term Image 1" 
            className="w-full h-auto object-cover rounded-lg border"
          />
          <p className="mt-2 text-sm text-gray-600 text-center italic">
            {experience.cap1}
          </p>
        </div>
      )}
      {experience.img1_2 && (
        <div className="flex flex-col items-center w-[250px]">
          <img 
            src={experience.img1_2} 
            alt="Co-op Term Image 2" 
            className="w-full h-auto object-cover rounded-lg border"
          />
          <p className="mt-2 text-sm text-gray-600 text-center italic">
            {experience.cap2}
          </p>
        </div>
      )}
      {experience.img1_3 && (
        <div className="flex flex-col items-center w-[250px]">
          <img 
            src={experience.img1_3} 
            alt="Co-op Term Image 3" 
            className="w-full h-auto object-cover rounded-lg border"
          />
          <p className="mt-2 text-sm text-gray-600 text-center italic">
            {experience.cap3}
          </p>
        </div>
      )}
    </div>
  </div>
)}


    <div class="mt-6 text-gray-700 leading-relaxed space-y-4">
        <p>{experience.para3}</p>
    </div>

    <div class="mt-6 text-gray-700 leading-relaxed space-y-4">
        <p>{experience.para4}</p>
    </div>

    {experience.pdf1 && (
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Poster for TRIUMF undergrad poster session</h2>
        <iframe 
          src={experience.pdf1} 
          class="w-full h-[600px] border rounded-lg"
        ></iframe>
      </div>
    )}

    <div class="mt-6 text-gray-700 leading-relaxed space-y-4">
        <p>{experience.para5}</p>
    </div>

    {experience.pdf2 && (
      <div class="mt-8">
        <h2 class="text-2xl font-semibold mb-4">Co-op Term Final Report</h2>
        <iframe 
          src={experience.pdf2} 
          class="w-full h-[600px] border rounded-lg"
        ></iframe>
      </div>
    )}
  </section>
</Layout>
