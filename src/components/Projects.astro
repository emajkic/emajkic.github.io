---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        <!-- Left column (title + accent bar) -->
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
            Projects
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        <!-- Add: a href={`/projects/${project.slug}/`} after 'group relative' go get to project pages when want to add writeup -->
        <!-- hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1 **add this into dic class = for hover -->
        <!-- Right column (project cards) -->
        <div class="lg:col-span-8">
          <div class="space-y-8">
            {siteConfig.projects.map((project, index) => (
              <div class="group relative" key={project.slug}>
                {/* Non-clickable project card */}
                <div
                  class="block relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300"
                >
                  <div class="space-y-4">
                    <div>
                      <span
                        class="text-sm font-mono"
                        style={`color: ${siteConfig.accentColor}`}
                      >
                        0{index + 1}
                      </span>
                      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                        {project.name}
                      </h3>
                    </div>

                    <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                      {project.description}
                    </p>

                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                      <img
                        src={project.img1}
                        alt="Project photo"
                        class="w-full aspect-square object-cover rounded-md shadow-lg"
                      />
                      <img
                        src={project.img2}
                        alt="Project photo"
                        class="w-full aspect-square object-cover rounded-md shadow-lg"
                      />
                      <img
                        src={project.img3}
                        alt="Project photo"
                        class="w-full aspect-square object-cover rounded-md shadow-lg"
                      />
                    </div>
                  {project.link && project.link_name && (
                  <div class="pt-4">
                    <p class="text-base sm:text-lg text-gray-700">
                    <strong>{project.link_name}:</strong>{" "}
                      <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-600 hover:underline"
                      >
                          {project.link}
                      </a>
                    </p>
                  </div>
                  )}

                    {project.skills && project.skills.length > 0 && (
                      <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                        {project.skills.map((skill) => (
                          <span class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium group-hover:bg-gray-800">
                            {skill}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
