---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 w-full">
    
    {/* Title */}
    <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
      Projects
    </h2>

    <div
      class="w-[75px] h-[5px] mt-2 mb-10 rounded-full"
      style={`background-color: ${siteConfig.accentColor}`}
    />

    {/* FULL-WIDTH GRID â€” FIXED */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full">

      {siteConfig.projects.map((project, index) => (
        
        <a
          key={project.slug}
          href={`/projects/${project.slug}/`}
          class="group block w-full relative transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:border-gray-300 rounded-2xl"
        >
          
          {/* Project Card */}
          <div class="w-full p-6 md:p-8 bg-gray-50 rounded-2xl border border-gray-200">
            <div class="space-y-4">
              
              <div>
                <span
                  class="text-sm font-mono"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  0{index + 1}
                </span>
                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                  {project.name}
                </h3>
              </div>

              <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                {project.description}
              </p>

              {/* Only first two images */}
              <div class="grid grid-cols-2 gap-4">
                {project.img1 && (
                  <img
                    src={project.img1}
                    alt="Project photo 1"
                    class="w-full aspect-square object-cover rounded-md shadow-lg"
                  />
                )}
                {project.img2 && (
                  <img
                    src={project.img2}
                    alt="Project photo 2"
                    class="w-full aspect-square object-cover rounded-md shadow-lg"
                  />
                )}
              </div>

              {/* Optional link */}
              {project.link && project.link_name && (
                <div class="pt-4">
                  <p class="text-base sm:text-lg text-gray-700">
                    <strong>{project.link_name}:</strong>{" "}
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-600 hover:underline"
                    >
                      {project.link}
                    </a>
                  </p>
                </div>
              )}

              {/* Skills */}
              {project.skills?.length > 0 && (
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.skills.map((skill) => (
                    <span
                      class="px-3 py-1 bg-gray-900 text-white rounded-lg text-xs sm:text-sm font-medium group-hover:bg-gray-800"
                    >
                      {skill}
                    </span>
                  ))}
                </div>
              )}

            </div>
          </div>

        </a>

      ))}

    </div>

  </section>
)}
