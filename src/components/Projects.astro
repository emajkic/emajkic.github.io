---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
    
    {/* Title */}
    <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
      Projects
    </h2>

    <div
      class="w-[75px] h-[5px] mt-2 mb-10 rounded-full"
      style={`background-color: ${siteConfig.accentColor}`}
    />

    {/* Project Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {siteConfig.projects.map((project, index) => (
        <a
          href={`/projects/${project.slug}`}
          class="group relative block"
          key={project.slug}
        >
          {/* Project Card */}
          <div class="relative p-6 md:p-8 bg-gray-50 rounded-2xl border border-gray-200 transition-all duration-300 group-hover:scale-[1.02] group-hover:-translate-y-1 overflow-hidden">

            {/* Accent hover background */}
            <div
              class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              style={`background-color: ${siteConfig.accentColor}`}
            ></div>

            {/* Card Content */}
            <div class="relative z-10 space-y-4">

              <div>
                <span
                  class="text-sm font-mono"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  0{index + 1}
                </span>

                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                  {project.name}
                </h3>
              </div>

              <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                {project.description}
              </p>

              {/* Images (first two only) */}
              <div class="grid grid-cols-2 gap-4">
                {project.img1 && (
                  <img
                    src={project.img1}
                    alt="Project photo 1"
                    class="w-full aspect-square object-cover rounded-md shadow-lg"
                  />
                )}
                {project.img2 && (
                  <img
                    src={project.img2}
                    alt="Project photo 2"
                    class="w-full aspect-square object-cover rounded-md shadow-lg"
                  />
                )}
              </div>

              {/* Skills */}
              {project.skills?.length > 0 && (
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.skills.map((skill) => (
                    <span class="px-3 py-1 bg-gray-900 text-white rounded-lg text-xs sm:text-sm font-medium group-hover:bg-gray-800">
                      {skill}
                    </span>
                  ))}
                </div>
              )}

            </div>
          </div>
        </a>
      ))}
    </div>

  </section>
)}
