---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{hasProjects && (
  // make this section resistant to outer max-widths
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 w-full max-w-none">
    
    {/* Title */}
    <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
      Projects
    </h2>

    <div
      class="w-[75px] h-[5px] mt-2 mb-10 rounded-full"
      style={`background-color: ${siteConfig.accentColor}`}
    />

    {/* Grid: uses minmax(0,1fr) behaviour so two columns will fit */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-none min-w-0">
      {siteConfig.projects.map((project, index) => (
        
        <a
          href={`/projects/${project.slug}/`}
          key={project.slug}
          class="group block w-full min-w-0 box-border" 
        >
          {/* Card: box-border keeps padding inside width, min-w-0 allows shrinking */}
          <div class="w-full min-w-0 box-border p-6 md:p-8 bg-gray-50 rounded-2xl border border-gray-200 transition-all duration-300 hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1 overflow-hidden">
            <div class="space-y-4 min-w-0">
              
              <div>
                <span
                  class="text-sm font-mono"
                  style={`color: ${siteConfig.accentColor}`}
                >
                  0{index + 1}
                </span>
                <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                  {project.name}
                </h3>
              </div>

              <p class="text-base sm:text-lg text-gray-600 leading-relaxed">
                {project.description}
              </p>

              {/* Image grid â€” images constrained to a fixed height to avoid forcing width */}
              <div class="grid grid-cols-2 gap-4 min-w-0">
                {project.img1 && (
                  <img
                    src={project.img1}
                    alt="Project photo 1"
                    class="w-full h-40 sm:h-48 md:h-56 object-cover rounded-md shadow-lg block"
                  />
                )}
                {project.img2 && (
                  <img
                    src={project.img2}
                    alt="Project photo 2"
                    class="w-full h-40 sm:h-48 md:h-56 object-cover rounded-md shadow-lg block"
                  />
                )}
              </div>

              {/* Optional external link */}
              {project.link && project.link_name && (
                <div class="pt-4">
                  <p class="text-base sm:text-lg text-gray-700">
                    <strong>{project.link_name}:</strong>{" "}
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-600 hover:underline break-all"
                    >
                      {project.link}
                    </a>
                  </p>
                </div>
              )}

              {/* Skills */}
              {project.skills?.length > 0 && (
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.skills.map((skill) => (
                    <span class="px-3 py-1 bg-gray-900 text-white rounded-lg text-xs sm:text-sm font-medium group-hover:bg-gray-800">
                      {skill}
                    </span>
                  ))}
                </div>
              )}

            </div>
          </div>
        </a>

      ))}
    </div>

  </section>
)}
